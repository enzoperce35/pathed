<%= simple_form_for @page do |f| %>
  <%= f.label :Title %> 
  <%= f.input :name, label: false, style: 'display: block' %> 
  
  <%= f.label :link %> 
  <%= f.input :link, label: false, style: 'display: block' %> 
  
  <%= f.label :content %>
  <%= f.input :content, collection: content_types, label: false, style: 'display: block;', include_blank: false %><br>
  
  <%= f.submit 'Save ' + session_language['name'] + ' Page' %> 
<% end %>
